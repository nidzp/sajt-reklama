{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/chatbot.js",
      "dest": "public/chatbot.js"
    },
    {
      "src": "/chatbot-styles.css",
      "dest": "public/chatbot-styles.css"
    },
    {
      "src": "/cookie-consent.js",
      "dest": "public/cookie-consent.js"
    },
    {
      "src": "/cookie-styles.css",
      "dest": "public/cookie-styles.css"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/upload",
      "dest": "public/upload.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
